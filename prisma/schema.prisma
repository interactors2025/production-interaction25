generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  Id          String  @id @default(auto()) @map("_id") @db.ObjectId
  Token       String  @unique
  firstName   String
  lastName    String
  mobile      String  @unique
  email       String  @unique
  collegeName String
  section     String
  Events      String[]
  amount      Int
  country     String
  state       String
  Image       String  @unique
  createdAt   String
  Status      Boolean @default(false)
  role        String  @default("student")
}




model Staff {
  Id          String   @id @default(auto()) @map("_id") @db.ObjectId
  Token       String   @unique
  firstName   String
  lastName    String
  collegeName String
  mobile      String   @unique
  email       String   @unique
  state       String
  country     String
  event       String?
  Image       String   @unique
  createdAt   String
  Status      Boolean  @default(false)
  role        String   @default("staff")
}